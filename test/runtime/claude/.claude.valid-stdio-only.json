{
  "mcpServers": {
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/user/Documents"
      ],
      "env": {
        "NODE_ENV": "production"
      }
    },
    "github": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ]
    },
    "postgres": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "mcp-server-postgres",
        "postgresql://localhost/mydb"
      ]
    }
  }
}
